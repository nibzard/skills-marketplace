      "category": "data-analytics",
      "tags": ["excel", "business", "analytics", "productivity"],
      "strict": true,
      "templates": [
        "./templates/report.md",
        "./templates/dashboard.md"
      ]
    },
    {
      "name": "documentation-helper",
