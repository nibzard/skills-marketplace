{
  "name": "skills-marketplace",
  "owner": {
    "name": "Skills Marketplace Team",
    "email": "team@skills-marketplace.dev",
    "url": "https://github.com/skills-marketplace/core"
  },
  "metadata": {
    "description": "A comprehensive marketplace for Claude Code Agent Skills with curated collections for development, data analysis, productivity, and security workflows",
    "version": "1.0.0",
    "homepage": "https://github.com/nibzard/skills-marketplace",
    "repository": "https://github.com/nibzard/skills-marketplace",
    "license": "MIT",
    "keywords": ["skills", "marketplace", "claude-code", "automation", "productivity"],
    "pluginRoot": "./skills"
  },
  "plugins": [
    {
      "name": "git-automation",
      "source": "./skills/git-automation",
      "description": "Automate Git workflows, generate conventional commit messages, manage branches, and handle repository operations. Use when working with Git repositories, making commits, or managing version control.",
      "version": "1.2.0",
      "author": {
        "name": "DevTools Team",
        "email": "devtools@skills-marketplace.dev"
      },
      "homepage": "https://docs.skills-marketplace.dev/skills/git-automation",
      "repository": "https://github.com/skills-marketplace/git-automation",
      "license": "MIT",
      "keywords": ["git", "automation", "workflow", "version-control", "commit-messages", "branches"],
      "category": "development-tools",
      "tags": ["automation", "git", "productivity", "development"],
      "strict": true,
      "commands": [
        "./commands/git-commands.md"
      ],
      "agents": [
        "./agents/commit-generator.md",
        "./agents/branch-manager.md"
      ]
    },
    {
      "name": "code-reviewer",
      "source": "./skills/code-reviewer",
      "description": "Review code for best practices, security vulnerabilities, and maintainability issues. Use when reviewing pull requests, analyzing code quality, or checking for potential issues and improvements.",
      "version": "1.1.0",
      "author": {
        "name": "Quality Assurance Team",
        "email": "qa@skills-marketplace.dev"
      },
      "homepage": "https://docs.skills-marketplace.dev/skills/code-reviewer",
      "license": "MIT",
      "keywords": ["code-review", "security", "best-practices", "quality", "static-analysis"],
      "category": "development-tools",
      "tags": ["security", "quality", "review", "development"],
      "strict": true,
      "allowed-tools": "Read, Grep, Glob",
      "hooks": {
        "PreToolUse": [
          {
            "matcher": "Write|Edit",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/scripts/pre-write-check.sh"
              }
            ]
          }
        ]
      }
    },
    {
      "name": "data-analysis",
      "source": "./skills/data-analysis",
      "description": "Process, analyze, and visualize data from Excel spreadsheets, CSV files, and various data sources. Use when working with spreadsheets, performing statistical analysis, or creating data visualizations.",
      "version": "2.0.0",
      "author": {
        "name": "Analytics Team",
        "email": "analytics@skills-marketplace.dev"
      },
      "homepage": "https://docs.skills-marketplace.dev/skills/data-analysis",
      "license": "MIT",
      "keywords": ["data-analysis", "excel", "csv", "statistics", "visualization", "pandas"],
      "category": "data-analytics",
      "tags": ["data", "analysis", "excel", "statistics"],
      "strict": true,
      "commands": [
        "./commands/data-commands.md"
      ],
      "scripts": [
        "./scripts/analyze.py",
        "./scripts/visualize.py"
      ],
      "mcpServers": {
        "data-processor": {
          "command": "${CLAUDE_PLUGIN_ROOT}/servers/data-server.py",
          "args": ["--config", "${CLAUDE_PLUGIN_ROOT}/config/data-config.json"]
        }
      }
    },
    {
      "name": "excel-analyzer",
      "source": "./skills/excel-analyzer",
